<!DOCTYPE html>
<html lang="ja">
<head>

  <meta charset="utf-8">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>{% block title %}{{ title }}{% endblock title %}</title>
  <meta name="description" content="{% block description %}{{ description }}{% endblock description %}">
  <meta name="author" content="{% block author %}boot-ads{% endblock author %}">
  <meta name="robots" content="noindex,follow">

  <link href='/css/prepared.min.css' rel="stylesheet">
  <link href='/css/vendor.min.css' rel="stylesheet">
  <link href='/css/app.min.css' rel="stylesheet">

  {% block css %}{% endblock css %}

</head>
<body class='{{ controllerName|lower }} {{ actionName|lower }}'>
<div>

  {% block header %}
  <header class='site-header'>
    <nav class="navbar navbar-expand-md" style='background-color: #3467b3!important'>
      <div class='text-center wrap'>Site Title</div>
    </nav>
  </header>
  {% endblock header %}

  {% block nav %}
  <nav class="nav nav-pills flex-column flex-sm-row">
    <a href="{{ href('/categories') }}"
       class="flex-sm-fill text-sm-center nav-link {% if request.requestURI == '/categories' %}active{% endif %}">
      All
    </a>
    {% for c in categories %}
    <a class="flex-sm-fill text-sm-center nav-link
      {% set path = pathjoin('/categories/', c.slug) %}
      {% if request.requestURI.startswith(path) %}active{% endif %}" href="{{ href(path) }}">
        {{ c.name }}
    </a>
    {% endfor %}
  </nav>
  {% endblock nav %}

  <main role="main" class="container">
    {% block content %}{% endblock content %}
  </main>

  {% block footer %}{% endblock footer %}

</main><!-- /.container -->


<script src='/js/prepared.min.js'></script>
<script src='/js/vendor.min.js'></script>
<script src='/js/app.min.js'></script>
<script src='/js/bundle{% if beans.adsProp.env != "production" %}-{{ beans.adsProp.env }}{% endif %}.js'></script>
{% block js %}{% endblock js %}


